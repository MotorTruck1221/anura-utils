{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "files": {
        "ignore": [
            "**/dist/**",
            ".github/**",
            "anuraos/**",
            "create-anura-app/templates/base/anura_env/**",
            "create-anura-app/templates/ts/types/**",
            "anura-types/**"
        ],
        "include": ["create-anura-app/src/**", "*"]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "ignore": ["pnpm-lock.yaml", "package.json"]
    },
    "organizeImports": { "enabled": true },
    "linter": { "enabled": false },
    "javascript": {
        "formatter": {
            "trailingComma": "none",
            "quoteStyle": "single",
            "semicolons": "always"
        }
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        },
        "formatter": {
            "indentStyle": "space",
            "trailingCommas": "none"
        }
    }
}
